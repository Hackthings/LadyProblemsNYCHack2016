<%= form_for [@entry, @bill] do |f| %>
  <% if @bill.errors.any? %>
    <ul>
      <% @bill.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <p>
  	<div> Total Before Coverage </div>
  	<%= f.number_field :total_without_coverage, step: :any %>
  </p>

  <p>
  	<div> Insurance Company </div>
  	<%= f.text_field :insurance_company, :value => @user_insurance_co %>
  </p>

  <p>
  	<div> Policy Name </div>
  	<%= f.text_field :policy_name, :value => @user_policy_name %>
  </p>

  <p>
  	<div>Final Cost</div>
  	<%= f.number_field :final_cost, step: :any %>
  </p>

  <p>
    <%= f.submit "Create Bill" %>
  </p>

<% end %>
