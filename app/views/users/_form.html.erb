<%= bootstrap_form_for(@user, label_errors:true, layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-7") do |f| %>
  <%= f.text_field :username %>
  <%= f.email_field :email %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation %>
  <%= f.text_field :city %>
  <%= f.collection_select :state, User::STATES, :to_s, :to_s, {:prompt => 'Select'} %>
  <%= f.collection_select :insurance_company, User::INSURANCE_COMPANIES, :to_s, :to_s, {:prompt => 'Select'} %>
  <%= f.text_field :policy_name %>
  <%= f.date_select :birthday, start_year: 1915 %>
  <%= f.collection_select :race, User::RACE, :to_s, :to_s, {:prompt => 'Select'}%>
  <%= f.form_group do %>
    <%= f.check_box :medical_professional, label: 'I am a medical professional.'%>
    <%= f.submit yield(:button_text), :class =>"btn btn-primary center-block" %>
  <%end%>
<% end %>