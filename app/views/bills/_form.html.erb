<%= form_for [@entry, @bill] do |f| %>
  <% if @bill.errors.any? %>
    <ul>
      <% @bill.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <p>
  	<div>*Total Before Coverage </div>
  	<%= f.number_field :total_without_coverage, step: :any %>
  </p>

  <p>
  	<div> Insurance Company </div>
    <%= f.collection_select :insurance_company, User::INSURANCE_COMPANIES, :to_s, :to_s, :selected => @entry.user.insurance_company %>
  </p>

  <p>
  	<div> Policy Name </div>
    <%= f.collection_select :policy_name, User::INSURANCE_COMPANIES, :to_s, :to_s, :selected => @entry.user.policy_name %>
  </p>

  <p>
  	<div>*Final Cost</div>
  	<%= f.number_field :final_cost, step: :any %>
  </p>

  <p>
    <%= f.submit "Create Bill" %>
  </p>

<% end %>
